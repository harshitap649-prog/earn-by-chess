{
  "buildCommand": "npm install && cd client && npm install && npm run build:skip-check",
  "outputDirectory": "client/dist",
  "installCommand": "npm install && cd client && npm install",
  "framework": "vite",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

